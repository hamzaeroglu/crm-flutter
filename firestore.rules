rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function: Kullanıcı giriş yapmış mı?
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function: Admin mi? (GÜVENLİ - Recursion olmadan)
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users koleksiyonu: Recursion'ı engellemek için kendi dokümanına erişim sadeleştirildi
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdmin()); 
      // Not: Client side sadece kendi verisini güncellemeli, admin rolü değiştirebilir
      // Daha detaylı rule validasyonu eklenebilir ama şu an için MVP yeterli
      
      allow delete: if isAdmin();
    }
    
    // Audit Logs: Sadece authenticated kullanıcılar yazabilir, sadece admin okuyabilir
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated(); 
      allow update, delete: if false; 
    }
    
    // Customers koleksiyonu: Rol bazlı erişim
    match /customers/{customerId} {
      // Okuma: Tüm authenticated kullanıcılar okuyabilir
      allow read: if isAuthenticated();
      
      // Oluşturma ve Güncelleme: Admin ve Agent yapabilir
      allow create, update: if isAuthenticated() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'agent']);
      
      // Silme: Sadece Admin yapabilir
      allow delete: if isAdmin();
    }
    
    // Diğer tüm koleksiyonlar için varsayılan: Erişim yok
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

